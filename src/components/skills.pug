script(type='text/x-template')#skills-list
  .skills-widget__container
    ul.skills
      li.skills__item(v-for='skill in skills' :key='skills.skillsGroup')
        skills-row(
          :item='skill'        
        )
        //- назвал айтем для примера, чтобы понять, что куда передается
        //- передаем данные внутрь скиллроу. В качестве item передаем наш skill, который мы перебрали 
        //- короче этот проп теперь надо зарегистрировать в пропс в компоненте скиллзроу

script(type='text/x-template')#skills-row
  .skills-row
    .skills-row__title {{item.skillsGroup}}
    ul.skills-row__list
      li.skills-row__item(v-for='(skillValue, skillName) in item.skills')
        skill(
          :skillName='skillName',
          :skillValue='skillValue',
        )
        //- передали переменнын внуть компонента скилл

script(type='text/x-template')#skill
  .skill
    span.skill-circle__title {{skillName}}
    svg(class='skill-circle__percentage' viewBox="0 0 100 100" preserveAspectRatio="none")
      linearGradient(id="gradient" x1="0%" y1="0%" x2="0%" y2="100%")
        stop(offset="0%" stop-color="#9400ee")
        stop(offset="100%" stop-color="#5500f2")
      circle(cx='50' cy='50' r='40' class='skill-circle skill-circle__under')
      circle(cx='50' cy='50' r='40' class='skill-circle skill-circle__above' :style='"animation-delay: -" + skillValue + "s"')